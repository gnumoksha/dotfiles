# Prompt
BULLETTRAIN_PROMPT_ORDER=(time status context dir virtualenv go git)
BULLETTRAIN_PROMPT_SEPARATE_LINE=false
# Status
BULLETTRAIN_STATUS_EXIT_SHOW=true
BULLETTRAIN_STATUS_BG=transparent
BULLETTRAIN_STATUS_ERROR_BG=transparent
# Time
BULLETTRAIN_TIME_BG=transparent
BULLETTRAIN_TIME_FG=white
# Context
BULLETTRAIN_CONTEXT_DEFAULT_USER=tobias
# Dir
BULLETTRAIN_DIR_BG=transparent
BULLETTRAIN_DIR_FG=red
#Extended path (0=short path, 1=medium path, 2=complete path, everything else=medium path)
BULLETTRAIN_DIR_EXTENDED=1
# Git
BULLETTRAIN_GIT_COLORIZE_DIRTY=false
BULLETTRAIN_GIT_BG=black
BULLETTRAIN_GIT_FG=white
