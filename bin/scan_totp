#!/usr/bin/env bash

scan_totp() {
  img_dir="$(xdg-user-dir PICTURES)"
  # shellcheck disable=SC2012
  last_img="$(ls -lAh "$img_dir" | grep -v '^d' | head -1 )"
  echo "Using image $last_img"
  zbarimg -q --raw "$img_dir/$last_img" && rm --interactive=always --verbose "$img_dir/$last_img"
}

scan_totp "$@"
